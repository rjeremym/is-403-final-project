<!-- FILE: views/addIdea.ejs -->
<%- include('partials/header') %>

<div class="page-header">
    <h1>Add New Business Idea Below</h1>
</div>

<% if (error) { %>
    <div class="error-message"><%= error %></div>
<% } %>

<form method="POST" action="/add-idea" class="idea-form">
    <div class="form-section">
        <h3>Basic Information <span class="required-note">* Required</span></h3>
        
        <div class="form-group">
            <label for="ideaname">Idea Name *</label>
            <input 
                type="text" 
                id="ideaname" 
                name="ideaname" 
                required
                placeholder="e.g., Eco-Friendly Subscription Box"
            >
        </div>
        
        <div class="form-group">
            <label for="ideadescription">Description *</label>
            <textarea 
                id="ideadescription" 
                name="ideadescription" 
                required
                rows="5"
                placeholder="Describe your business idea in detail..."
            ></textarea>
        </div>
    </div>
    
    <div class="form-section">
        <h3>Strategy & Market</h3>
        
        <div class="form-group">
            <label>Marketing Strategy (select all that apply)</label>
            <div class="checkbox-group">
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Social Media Marketing">
                    Social Media Marketing
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Content Marketing">
                    Content Marketing
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Email Marketing">
                    Email Marketing
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="SEO">
                    SEO (Search Engine Optimization)
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Paid Advertising">
                    Paid Advertising
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Influencer Marketing">
                    Influencer Marketing
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Word of Mouth">
                    Word of Mouth
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="marketingstrategy" value="Partnership Marketing">
                    Partnership Marketing
                </label>
            </div>
        </div>
        
        <div class="form-group">
            <label for="targetcustomer">Target Customer</label>
            <textarea 
                id="targetcustomer" 
                name="targetcustomer"
                rows="3"
                placeholder="Describe your target audience..."
            ></textarea>
        </div>
    </div>
    
    <div class="form-section">
        <h3>Planning & Resources</h3>
        
        <div class="form-row">
            <div class="form-group">
                <label for="estimatedcost">Estimated Cost ($)</label>
                <input 
                    type="number" 
                    id="estimatedcost" 
                    name="estimatedcost"
                    min="0"
                    step="0.01"
                    placeholder="0.00"
                >
            </div>
            
            <div class="form-group">
                <label for="timeline">Timeline</label>
                <input 
                    type="text" 
                    id="timeline" 
                    name="timeline"
                    placeholder="e.g., 3-6 months, Q2 2024"
                >
            </div>
        </div>
        
        <div class="form-group">
            <label for="potential">Success Potential (1-10)</label>
            <input 
                type="number" 
                id="potential" 
                name="potential"
                min="1"
                max="10"
                placeholder="Rate from 1 to 10"
            >
            <small>Rate the potential success of this idea from 1 (low) to 10 (high)</small>
        </div>
    </div>
    
    <div class="form-actions">
        <a href="/view-ideas" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Idea</button>
    </div>
</form>

<%- include('partials/footer') %>